# ===========================================
# ITAM CMS Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values

# ===========================================
# Mode: development | production
# ===========================================
NODE_ENV=development

# ===========================================
# Database
# ===========================================
DB_USER=itam
DB_PASSWORD=your_secure_password_here
DB_NAME=itam
DB_HOST=postgres
DB_PORT=5432

# ===========================================
# Redis
# ===========================================
REDIS_URL=redis://redis:6379

# ===========================================
# JWT Authentication
# ===========================================
JWT_SECRET=your_very_secure_jwt_secret_at_least_32_chars
JWT_EXPIRY=720h

# ===========================================
# Server
# ===========================================
API_PORT=8080

# ===========================================
# Upload Configuration
# ===========================================
# Path INSIDE Docker container (mapped to volume)
# In production: uploads stored in Docker volume "uploads_data"
# Nginx serves them at /uploads URL path
UPLOAD_PATH=/app/uploads
UPLOAD_MAX_SIZE=5242880

# ===========================================
# Initial Admin User (created on first run)
# ===========================================
ADMIN_EMAIL=admin@itam.misis.ru
ADMIN_PASSWORD=your_admin_password_here
ADMIN_NAME=Admin

# ===========================================
# Telegram Worker (optional)
# ===========================================
# Get these from https://my.telegram.org
# TG_API_ID=your_telegram_api_id
# TG_API_HASH=your_telegram_api_hash
# TG_SESSION_STRING=your_session_string
# TG_CHANNEL_USERNAME=itatmisis
# TG_UPDATE_INTERVAL=900
# TG_POSTS_COUNT=5
# TG_LOG_LEVEL=INFO

# ===========================================
# Frontend Configuration
# ===========================================
# API URL for frontend builds
# - Empty = relative URLs (recommended for production)
# - http://localhost:8080 = for local development without Docker
VITE_API_URL=
